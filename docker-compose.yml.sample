services:
  postgres:
    image: postgres:16  # Latest stable
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U gollama -d gollama"]
      interval: 5s
      timeout: 5s
      retries: 5
    restart: always
    environment:
      POSTGRES_DB: SAMPLE
      POSTGRES_USER: SAMPLE
      POSTGRES_PASSWORD: SAMPLE
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

  redis:
    image: redis:7-alpine  # Lightweight, latest
    restart: always
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
    command: redis-server --appendonly yes  # Persistence

  go-llama-backend:
    image: ghcr.io/thefozid/go-llama:latest
    restart: always
    ports:
      - "8070:8070"
    depends_on:
      postgres:
        condition: service_healthy
      redis:
        condition: service_started
    volumes:
      - ./config.json:/app/config.json

  qdrant:
    image: qdrant/qdrant:latest
    container_name: growerai-qdrant
    ports:
      - "6333:6333"  # REST API
      - "6334:6334"  # gRPC API
    volumes:
      - qdrant_storage:/qdrant/storage
    environment:
      - QDRANT__SERVICE__GRPC_PORT=6334
    restart: unless-stopped

volumes:
  postgres_data:
  redis_data:
  qdrant_storage:
  
